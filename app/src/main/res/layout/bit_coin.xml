<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thinkdevs.cryptomarket.fragment.BitCoin">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/bitcoin_rec"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="28dp"
        android:padding="@dimen/space5"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/bitcoin_rec"
        app:layout_constraintEnd_toStartOf="@+id/bitcoin_rec"
        app:layout_constraintStart_toStartOf="@+id/bitcoin_rec"
        app:layout_constraintTop_toTopOf="@+id/bitcoin_rec"
        tools:visibility="gone" />
</android.support.constraint.ConstraintLayout>
